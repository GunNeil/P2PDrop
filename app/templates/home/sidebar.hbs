<div class="sidebar-nav-container">
  <ul class="sidebar-menu">
    <li {{action "toggleMenu" "contacts"}} {{bind-attr class=":v-div isContactSelected:active:inactive"}}>
      <img src="images/icons/contacts.png" alt="" height="24" width="24" />
      <span class="title">
        Contacts
      </span>
    </li>
    <li {{action "toggleMenu" "network"}} {{bind-attr class="isContactSelected:inactive:active"}}>
      <img src="images/icons/network.png" alt="" height="24" width="24" />
      <span class="title">
        Network
      </span>
    </li>
  </ul>

  <ul class="sidebar-nav" id="sidebar">
    {{#if isNoConnectedUsers}}
      <li>{{#paper-button raised=true primary=true action="goToFind" class="btn-width"}}Add Peers{{/paper-button}}</li>
    {{/if}}
    {{#liquid-if isContactSelected class="slide"}}
      {{#each connectedUsers as |connectedUser|}}
        <li {{action "selectUser" connectedUser}}>
          <div class="time">
            {{#if connectedUser.isOnline}}
              <span class="online">online</span>
            {{else}}
              {{moment-format connectedUser.online allow-empty=true}}
            {{/if}}
          </div>
          <img src="{{connectedUser.profilePic.link}}" alt="" height="48" width="48" class="profile-image"/>
          <span class="name">{{connectedUser.name}}</span>
        </li>
      {{/each}}
    {{else}}
      {{#if isNoNetworkUsers}}
        <li>No users in same network</li>
      {{/if}}
      {{#each networkUsers as |networkUser|}}
        <li {{action "selectUser" networkUser}}>
          <div class="time">
            {{#if networkUser.isOnline}}
              <span class="online">online</span>
            {{else}}
              {{moment-format networkUser.online allow-empty=true}}
            {{/if}}
          </div>
          <img src="{{networkUser.profilePic.link}}" alt="" height="48" width="48" class="profile-image"/>
          <span class="name">{{networkUser.name}}</span>
        </li>
      {{/each}}
    {{/liquid-if}}
  </ul>
</div>
